<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD//EN"
      "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
      
<hibernate-mapping>
	<class name="com.mycompany.app.PersonRole" table="personrole">
	<meta attribute = "class-description">
         This class contains the person role detail. 
      </meta>
      
      <id name = "personRoleId" type = "int" column = "person_role_id">
         <generator class="increment"/>
      </id>
      
      <property name="personId" column="person_id" type="int" />
      <property name="roleId" column="role_id" type="int" />
      <property name="roleName" column="role_name" type="string" />
	</class>
</hibernate-mapping>